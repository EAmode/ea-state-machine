{
  "name": "@eamode/state-machine",
  "version": "2.4.3",
  "description": "Finite State Machine",
  "author": "EA Mode LLC <info@eamode.com>",
  "keywords": [
    "FSM",
    "State Machine",
    "Finite State Machine",
    "Routing"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "./lib/index.umd.js",
  "module": "./lib/index.js",
  "types": "./lib/types/index.d.ts",
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/eamode/state-machine.git"
  },
  "bugs": {
    "url": "https://github.com/eamode/state-machine/issues"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "format": "prettier --write **/*.ts",
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "docs": "typedoc --out lib/docs --target es6 --mode file --theme minimal src",
    "prebuild": "rimraf lib",
    "build": "tsc && rollup -c && rollup -c -o lib/index.umd.js -f umd -n @eamode/state-machine --sourcemap",
    "start": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "deploy-docs": "node tools/gh-pages-publish.js",
    "report-coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 45,
        "functions": 65,
        "lines": 75,
        "statements": 75
      }
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.1.0",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "coveralls": "^3.1.0",
    "jest": "^26.6.3",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.35.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "ts-jest": "^26.4.4",
    "tsc-watch": "^4.2.9",
    "tslint": "^5.20.1",
    "typedoc": "^0.20.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "rxjs": "^6.6.3"
  },
  "peerDependencies": {
    "rxjs": "^6.6.3"
  }
}
