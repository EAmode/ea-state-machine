{
  "extends": "tslint:recommended",
  "rules": {
    "arrow-parens": false,
    "member-access": false,
    "no-inferrable-types": true,
    "no-non-null-assertion": true,
    "object-literal-sort-keys": false,
    "quotemark": [true, "single", "avoid-escape"],
    "radix": true,
    "semicolon": [true, "never"],
    "interface-name": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "singleline": "never"
      }
    ]
  }
}
